<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soal 5 / 5"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apa kepanjangan dari API?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <RadioGroup
        android:id="@+id/radio_group_q5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">

        <RadioButton
            android:id="@+id/radio_q5_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A. Application Process Interface"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/radio_q5_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B. Application Programming Interface"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/radio_q5_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C. Advanced Programming Interface"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/radio_q5_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D. Application Protocol Interface"
            android:textSize="16sp" />

    </RadioGroup>

    <Button
        android:id="@+id/btn_finish_q5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selesai"
        android:layout_gravity="end" />

</LinearLayout>