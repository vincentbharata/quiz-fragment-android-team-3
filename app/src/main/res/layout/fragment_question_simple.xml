<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_main"
    android:padding="24dp">

    <!-- Progress Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        android:padding="20dp"
        android:layout_marginBottom="24dp"
        android:elevation="2dp">

        <TextView
            android:id="@+id/tv_question_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pertanyaan 1 dari 5"
            android:textColor="#495057"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:max="5"
            android:progress="1"
            android:progressTint="#007BFF"
            android:progressBackgroundTint="#E9ECEF" />

    </LinearLayout>

    <!-- Question Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card"
        android:padding="24dp"
        android:layout_marginBottom="24dp"
        android:elevation="2dp">

        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pertanyaan akan muncul di sini"
            android:textColor="#212529"
            android:textSize="18sp"
            android:textStyle="bold"
            android:lineSpacingExtra="4dp"
            android:gravity="start" />

    </LinearLayout>

    <!-- Options Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RadioGroup
            android:id="@+id/radio_group_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_option_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_radio_option"
                android:text="Opsi 1"
                android:textColor="#495057"
                android:textSize="16sp"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:buttonTint="#007BFF" />

            <RadioButton
                android:id="@+id/radio_option_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_radio_option"
                android:text="Opsi 2"
                android:textColor="#495057"
                android:textSize="16sp"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:buttonTint="#007BFF" />

            <RadioButton
                android:id="@+id/radio_option_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_radio_option"
                android:text="Opsi 3"
                android:textColor="#495057"
                android:textSize="16sp"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:buttonTint="#007BFF" />

            <RadioButton
                android:id="@+id/radio_option_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_radio_option"
                android:text="Opsi 4"
                android:textColor="#495057"
                android:textSize="16sp"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:buttonTint="#007BFF" />

        </RadioGroup>

    </ScrollView>

    <!-- Next Button -->
    <Button
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="SELANJUTNYA"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:background="@drawable/bg_button_primary"
        android:enabled="false"
        android:layout_marginTop="24dp"
        android:elevation="2dp" />

</LinearLayout>
