<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Soal 4 / 5"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Database apa yang paling populer untuk aplikasi mobile?"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <RadioGroup
        android:id="@+id/radio_group_q4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp">

        <RadioButton
            android:id="@+id/radio_q4_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A. MySQL"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/radio_q4_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B. PostgreSQL"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/radio_q4_c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C. Oracle"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <RadioButton
            android:id="@+id/radio_q4_d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D. SQLite"
            android:textSize="16sp" />

    </RadioGroup>

    <Button
        android:id="@+id/btn_next_q4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selanjutnya"
        android:layout_gravity="end" />

</LinearLayout>